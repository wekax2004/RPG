{
  "name": "retro-rpg",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "desktop-app/main.cjs",
  "scripts": {
    "dev": "vite",
    "start:server": "npx ts-node src/server/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "launch.bat",
    "electron:dev": "concurrently -k \"npm run dev\" \"node src/server/index.js\" \"npm run electron\"",
    "start:electron": "npm run electron:dev",
    "electron:build": "npm run build && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.retrorpg.game",
    "productName": "Retro RPG",
    "files": [
      "dist/**/*",
      "desktop-app/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "dir"
    }
  }
}