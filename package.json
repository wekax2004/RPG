{
  "name": "retro-rpg",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "desktop-app/main.cjs",
  "scripts": {
    "dev": "vite",
    "start:server": "npx tsx src/server/server.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "launch.bat",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "start:client": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "cleanup": "taskkill /F /IM node.exe & taskkill /F /IM electron.exe",
    "start:electron": "npm run electron:dev",
    "electron:build": "npm run build && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.retrorpg.game",
    "productName": "Retro RPG",
    "files": [
      "dist/**/*",
      "desktop-app/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "dir",
      "forceCodeSigning": false
    }
  },
  "dependencies": {
    "sharp": "^0.34.5"
  }
}